        <Grid>
            <ListView Name="ListviewMother">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="20">
                            <CheckBox Content="{Binding }"></CheckBox>
                            <ListView ItemsSource="{Binding lines}" Background="Blue">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="2" >
                                            <TextBox Text="{Binding linenumber}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
